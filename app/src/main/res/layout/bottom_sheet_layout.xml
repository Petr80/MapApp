<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="true">

    <!-- Bottom Sheet HEADLINE -->
    <TextView
        android:id="@+id/text_bottom_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Picture"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bottom Sheet CAMERA -->
    <ImageView
        android:id="@+id/image_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_photo_camera_24"
        app:layout_constraintEnd_toEndOf="@+id/text_camera"
        app:layout_constraintStart_toStartOf="@+id/text_camera"
        app:layout_constraintTop_toBottomOf="@+id/text_bottom_headline" />

    <TextView
        android:id="@+id/text_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_camera" />

    <!-- Bottom Sheet GALERY -->
    <ImageView
        android:id="@+id/image_galery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_baseline_image_24"
        app:layout_constraintBottom_toTopOf="@+id/text_bottom_galery"
        app:layout_constraintEnd_toEndOf="@+id/text_bottom_galery"
        app:layout_constraintStart_toStartOf="@+id/text_bottom_galery" />

    <TextView
        android:id="@+id/text_bottom_galery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Galery"
        app:layout_constraintBottom_toBottomOf="@+id/text_camera"
        app:layout_constraintStart_toEndOf="@+id/text_camera"
        app:layout_constraintTop_toTopOf="@+id/text_camera" />

    <!-- Bottom Sheet DELETE -->
    <ImageView
        android:id="@+id/image_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintBottom_toTopOf="@+id/text_bottom_delete"
        app:layout_constraintEnd_toEndOf="@+id/text_bottom_delete"
        app:layout_constraintStart_toStartOf="@+id/text_bottom_delete" />

    <TextView
        android:id="@+id/text_bottom_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="@+id/text_bottom_galery"
        app:layout_constraintStart_toEndOf="@+id/text_bottom_galery" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>